@model BookListMVC.Models.Book
@{
    ViewData["Title"] = "Details";
}


<br />
<h2 class="text-info">Book Details</h2>
<hr />

<form>
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-form-label">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Title" class="form-control" disabled />
                </div>
                <span asp-validation-for="Title" class="text-danger col-form-label"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-form-label">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Author" class="form-control" disabled />
                </div>
                <span asp-validation-for="Author" class="text-danger col-form-label"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-form-label">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" class="form-control" disabled />
                </div>
                <span asp-validation-for="Price" class="text-danger col-form-label"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>
