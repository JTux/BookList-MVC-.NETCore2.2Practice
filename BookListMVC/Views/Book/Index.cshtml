@model IEnumerable<BookListMVC.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2 class="text-info">Book List</h2>

<hr />

<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">Create New Book</a>
</p>

@if (Model.Count() > 0)
{
    <div class="border">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Price)
                </th>
                <th></th>
            </tr>
            @foreach (var book in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(b => book.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(b => book.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(b => book.Price)
                    </td>
                    <td class="text-right">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-sm btn-primary">Details</a>
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-success">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <p>No books recorded. Get started by clicking "Create New Book" above.</p>
}