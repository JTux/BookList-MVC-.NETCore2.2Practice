@model BookListMVC.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2 class="text-info">Confirm Delete</h2>
<hr />

<form asp-action="Delete" method="post">
    <div class="container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-form-label">
                    <label asp-for="Title"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Title" class="form-control" disabled />
                </div>
                <span asp-validation-for="Title" class="text-danger col-form-label"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-form-label">
                    <label asp-for="Author"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Author" class="form-control" disabled />
                </div>
                <span asp-validation-for="Author" class="text-danger col-form-label"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-form-label">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Price" class="form-control" disabled />
                </div>
                <span asp-validation-for="Price" class="text-danger col-form-label"></span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>
